<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.clinica.controladores.ListaCitasControlador">


    <Label text="Lista de citas" textFill="#0f0f0f">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
   <Button mnemonicParsing="false" onAction="#cancelarCita" text="Cancelar cita" />


    <TableView fx:id="tablaCitas" prefHeight="400.0" prefWidth="475.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colPaciente" text="Paciente" />
            <TableColumn fx:id="colFecha" text="Fecha" />
            <TableColumn fx:id="colServicio" text="Servicio" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>


</VBox>
