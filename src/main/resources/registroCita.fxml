<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="243.0" prefWidth="415.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.clinica.controladores.RegistroCitaControlador">
   <children>
      <Label text="Registro de citas">
         <font>
            <Font size="20.0" />
         </font>
         <effect>
            <Blend />
         </effect>
      </Label>
      <Label text="Paciente:" />
      <ComboBox fx:id="cbPaciente" prefHeight="31.0" prefWidth="456.0" />
      <Label text="Fecha:" />
      <DatePicker fx:id="dpFechaCita" prefHeight="31.0" prefWidth="432.0" />
      <Label text="Hora (24 horas): " />
      <ComboBox id="cbHora" fx:id="cbHora" prefHeight="31.0" prefWidth="456.0" promptText="Seleccione una hora" />
      <Label text="Servicio:" />
      <ComboBox fx:id="cbServicio" prefHeight="31.0" prefWidth="446.0" />

      <Button mnemonicParsing="false" onAction="#registrarCita" text="Crear cita" />

   </children>
   <padding>
      <Insets left="10.0" top="10.0" />
   </padding>
</VBox>
